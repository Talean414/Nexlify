{
  "extends": "../../tsconfig.base.json", // âœ… reference shared base if you're using it
  "compilerOptions": {
    "baseUrl": ".", // ðŸ‘ˆ base for local imports
    "paths": {
      "@atoms/*": [
        "../../shared/frontend/components/atoms/*"
      ],
      "@molecules/*": [
        "../../shared/frontend/components/molecules/*"
      ],
	  "@theme/*": [
	  "../../shared/frontend/theme/*"
	  ],
	  "@theme": [
	  "../../shared/frontend/theme/index.ts"
	  ],  //

      "@hooks/*": [
        "./hooks/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@i18n/*": [
        "./i18n/*"
      ],
      "@config": [
        "./config.ts"
      ],
      "@constants/*": [
        "./constants/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
