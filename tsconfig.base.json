{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                           // Important!
    "paths": {
      "@shared/*": ["shared/*"],               // Maps to actual shared folder
      "@email/*" : ["shared/utils/email/*"],
      "@sms/*" : ["shared/utils/sms/*"]
      
    }
  }
}