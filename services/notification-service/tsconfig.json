{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../..",
    "paths": {
      "@shared/*": ["shared/*"],
      "@email/*": ["shared/utils/email/*"],
      "@sms/*": ["shared/utils/sms/*"]
    },
    "typeRoots": ["./types", "../../node_modules/@types"]
  },
  "include": ["src", "../../shared"],
  "exclude": ["node_modules", "dist"]
}